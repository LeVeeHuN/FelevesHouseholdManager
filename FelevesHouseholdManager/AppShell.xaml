<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FelevesHouseholdManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FelevesHouseholdManager"
    Title="FelevesHouseholdManager">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="TODOs"
        ContentTemplate="{DataTemplate local:TodoPage}"
        Route="TodoPage"/>
    <ShellContent
        Title="Wishes"
        ContentTemplate="{DataTemplate local:WishPage}"
        Route="WishPage"/>
    <ShellContent
        Title="Finances"
        ContentTemplate="{DataTemplate local:FinancesPage}"
        Route="FinancesPage"/>

</Shell>
