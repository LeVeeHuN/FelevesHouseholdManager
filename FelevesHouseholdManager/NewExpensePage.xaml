<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FelevesHouseholdManager.NewExpensePage"
             Title="NewExpensePage">
    <VerticalStackLayout>
        <Label Text="Name"/>
        <Entry Text="{Binding Title}" />
        <Label Text="Description"/>
        <Entry Text="{Binding Description}" />
        <Label Text="Price"/>
        <Entry Text="{Binding Price}" 
               Keyboard="Numeric"/>
        <Image Source="{Binding ImagePath}"
               HeightRequest="150"
               WidthRequest="150"
               Aspect="AspectFill"
               HorizontalOptions="Center" />
        <Button x:Name="TakePhotoBtn" Text="Take photo" Clicked="TakePhotoBtn_Clicked" Margin="5"/>
        <Button x:Name="SelectPhotoBtn" Text="Select photo" Clicked="SelectPhotoBtn_Clicked" Margin="5"/>
        <Button Text="Save" Clicked="Button_Clicked" Margin="5"/>
    </VerticalStackLayout>
</ContentPage>